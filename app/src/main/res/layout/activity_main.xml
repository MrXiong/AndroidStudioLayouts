<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btn_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_basic" />

        <Button
            android:id="@+id/btn_bottom_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_bottom_navigation" />

        <Button
            android:id="@+id/btn_fv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_fv" />

        <Button
            android:id="@+id/btn_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_full" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_login" />

        <Button
            android:id="@+id/btn_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_drawer" />

        <Button
            android:id="@+id/btn_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_scroll" />

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_setting" />

        <Button
            android:id="@+id/btn_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_tabs" />

        <Button
            android:id="@+id/btn_maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_maps" />

        <Button
            android:id="@+id/btn_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_items" />

        <include layout="@layout/sample_my_view" />

    </LinearLayout>
</ScrollView>